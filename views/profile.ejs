<% include head %>
<div class="profile-header">
	<h2><%= profile.user.username %></h2>
	<% if (profile.user.rating) { %>
		<p><% for (let i = 0; i < 5; i++ ) { %>
				<% if (profile.user.rating > i+.75 ) { %>
					<img src="/images/star-full.png" width="30px">
				<% } else if (profile.user.rating > i+.25 ) { %>
					<img src="/images/star-half.png" width="30px">
				<% } else { %>
					<img src="/images/star-empty.png" width="30px">
				<% } %>
		<% } %></p>
	<p>Rating: <%= profile.user.rating %>/5 (<%= profile.user.nbRatings %> ratings)</p>
	<% } else { %>
	<p>Not rated yet</p>
	<% } %>
</div>

<% if (user) { %>
	<% if (String(profile.user._id) == String(profile.currentUser._id)) { %>
	<div class="profile-body">
		<!-- Normal profile menu -->
		<div class="normal-profile-menu">
			<div class="button-profile proftab profile-tab">Profile</div><div class="button-profile proftab requests-tab">Requests</div><div class="button-profile proftab services-tab">Services</div><div class="button-profile proftab messages-tab">Messages</div><div class="button-profile proftab ratings-tab">Ratings</div>
		</div>
		<!-- Mobile profile menu -->
		<div class="mobile-profile-menu">
			<div class="button-profile proftab profile-tab"><img src="/images/user.png" height="20px"></div><div class="button-profile proftab requests-tab"><img src="/images/request.png" height="20px"></div><div class="button-profile proftab services-tab"><img src="/images/services.png" height="20px"></div><div class="button-profile proftab messages-tab"><img src="/images/messages.png" height="20px"></div><div class="button-profile proftab ratings-tab"><img src="/images/ratings.png" height="20px"></div>
		</div>
		<div class="now-loading"><img src="/images/ajax_loading.gif"></div>
		<h3 id="title-profile-section"></h3>
		<div id="profile-container"></div>
	</div>
	<% } else { %>
	<div class="profile-body">
		<div class="now-loading"><img src="/images/ajax_loading.gif"></div>
		<div id="ratings-other" data-id='<%= String(profile.user._id) %>'></div>
	</div>
	<% } %>

<% } %>


<% include footer %>